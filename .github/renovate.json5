{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:recommended',
    ':disableRateLimiting',
    ':semanticCommitsDisabled',
  ],
  automerge: true,
  platformAutomerge: true,
  platformCommit: 'enabled',
  assignAutomerge: true,
  reviewers: [
    'team:android-oss',
  ],
  rebaseWhen: 'conflicted',
  prBodyTemplate: '{{{header}}}{{{table}}}{{{notes}}}{{{changelogs}}}{{{controls}}}{{{footer}}}',
  prBodyColumns: [
    'Package',
    'Change',
    'Age',
  ],
  prFooter: "ðŸ”• Ignore: Close this PR and you won't be reminded about these updates again.",
  ignoreDeps: [],
  packageRules: [
    {
      matchDatasources: [
        'maven',
      ],
      registryUrls: [
        'https://repo.maven.apache.org/maven2',
        'https://dl.google.com/android/maven2',
        'https://plugins.gradle.org/m2',
      ],
    },
    {
      matchPackageNames: [
        'gradle',
      ],
      prBodyNotes: '[Changelog](https://docs.gradle.org/{{{newVersion}}}/release-notes.html)',
    },
    {
      groupName: 'Freeletics Gradle Plugin',
      matchPackageNames: [
        '/com.freeletics.gradle/',
      ],
    },
    {
      groupName: 'Kotlin and KSP',
      matchPackageNames: [
        '/org.jetbrains.kotlin/',
        '/com.google.devtools.ksp/',
        '/dev.zacsweers.kctfork/',
        '/dev.drewhamilton.poko/',
        '!/org.jetbrains.kotlinx/',
      ],
    },
    {
      groupName: 'Compose',
      matchPackageNames: [
        '/androidx.compose/',
        '/org.jetbrains.compose/',
      ],
    },
  ],
}
